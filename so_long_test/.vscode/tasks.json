{
	"version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang++ build",
            "command": "/usr/bin/clang++",
            "args": [
				"-std=c++17",
				"-Wall",
				"-Wextra",
				"-Werror",
                "-g",
				"-I${workspaceFolder}/include/",
				"-I${workspaceFolder}/libft/",
				"-I${workspaceFolder}/mlx_opengl/",
				"${fileDirname}/game_Macos.c",
                "${fileDirname}/${file}",
				"${fileDirname}/fill.c",
                "${fileDirname}/init.c",
				"${fileDirname}/map.c",
				"${fileDirname}/panel.c",
				"${fileDirname}/player.c",
				"${fileDirname}/validate.c",
				"${fileDirname}/utils/file_util.c",
				"${fileDirname}/utils/game_util.c",
				"${fileDirname}/utils/img_util.c",
				"${fileDirname}/utils/tile_util.c",
				"${fileDirname}/utils/vector_util.c",
				"${workspaceFolder}/libft/libft.a",
				"${workspaceFolder}/mlx_opengl/libmlx.a",
				"-lft",
				"-L${workspaceFolder}/libft",
				"-L${workspaceFolder}/mlx_opengl",
				"-lmlx",
				"-lm",
				"-lz",
				"-o",
                "${workspaceFolder}/${workspaceFolderBasename}"
            ],
            "options": {
                "cwd": "${WorkspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
}